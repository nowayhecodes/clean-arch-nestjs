{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/test/*": [
        "./test/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": [
    "src",
    "test"
  ]
}